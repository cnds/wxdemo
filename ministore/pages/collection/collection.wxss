.collection-item-nav {
  display: flex;
  justify-content: space-between;
  height: 40rpx;
  align-items: center;
  background-color: white;
  border-bottom: 1rpx solid #f2f2f2;
  padding: 10rpx 30rpx;
}

.collection-item-nav .label {
