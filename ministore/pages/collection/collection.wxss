/* pages/collection/collection.wxss */

.container {
  background-color: #f2f2f2;
}

.name {
  height: 80rpx;
  text-align: center;
}

.name text {
  font-size: 60rpx;
}

.collection {
  height: 80%;
  width: 100%;
  padding: 15rpx;
}

.collection-item {
  justify-content: space-between;
  margin-top: 15rpx;
  font-size: 35rpx;
}

.collection-edit-delete {
  color: orange;
  display: flex;
  background-color: white;
  overflow: hidden;
  width: 130vw;
}

.collection-edit {
  color: orange;
  display: flex;
  background-color: white;
  align-items: center;
  height: 100rpx;
  padding: 10rpx 30rpx;
  width: 100vw;
  border-bottom: 1rpx solid #f2f2f2;
  box-sizing: border-box;
}

.collection-edit input, .collection-edit text {
  height: 100%;
  width: 80rpx;
  display: flex;
  justify-content: center;
  text-align: center;
  align-items: center;
}

.collection-edit input {
  color: black;
}

.delete-btn {
  display: flex;
  align-items: center;
  text-align: center;
  justify-content: center;
  width: 30vw;
  border-bottom: 1rpx solid #f2f2f2;
  background-color: #e64340;
  color: white
}

