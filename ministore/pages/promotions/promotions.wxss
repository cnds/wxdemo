/* pages/promotions/promotions.wxss */

.container {
  display: flex;
  flex-direction: column;
  height: 80%;
}

.name {
  height: 80rpx;
}

.name text {
  font-size: 30px;
}

.promotions {
  height: 50%;
  display: flex;
  flex-direction: column;
  width: 85%;
  padding: 30rpx;
}

.promotions-item {
  height: 20%;
  padding: 30rpx;
  background-color: #f2f6f6;
  display: flex;
  flex-direction: column;
  margin-top: 30rpx;
}

.promotions-modify {
  border-bottom: 0;
  color: orange;
  display: flex;
}

.promotions-modify input, .promotions-modify text {
  width: 80rpx;
  display: flex;
  justify-content: center;
  text-align: center;
  border-bottom: 1px solid orange;
}

.promotions-modify input {
  color: black;
}

.promotions-btn {
  margin-top: 30rpx;
  border-bottom: 0;
  width: 80%;
  color: white;
  background-color: green;
  border-radius: 0;
  font-size: 14px;
}

.promotions-btn-cancel {
  margin-top: 30rpx;
  border-bottom: 0;
  width: 80%;
  color: white;
  background-color: #bfc2c2;
  border-radius: 0;
  font-size: 14px;
}
