/* pages/sign-up/sign-up.wxss */
/**index.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-content: center;
  justify-content: space-between;
}

.name {
  height: 80px;
}

.name text {
  font-size: 30px;
}

.reset-pwd {
  flex-grow: 1;
  height: 50%;
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-content: center;
  flex-direction: column;
  width: 80%;
  padding: 0 2%;
}

.reset-pwd-item {
  margin-top: 30px;
  border-bottom: 1px solid #eee;
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  padding-bottom: 5px;
}

.bottom {
  border-bottom: 0px;
}

.reset-pwd-item-info {
  font-size: 12px;
  color: #888;
  padding-bottom: 20rpx;
}

.reset-pwd-sms {
  height: 100%;
  display: flex;
  flex-direction: row;

}

.reset-pwd-item button {
  height: 100%;
  font-size: 12px; 
  width: 35vw;
}

.new-password {
  display: flex;
  justify-content: space-between;
  flex-grow: 1;
  align-items: center;
}

.reset-pwd-btn {
  width: 80%;
  color: white;
  background-color: green;
  border-radius: 0;
  font-size: 14px;
}

.reset-pwd-btn hover {
  width: 80%;
  color: white;
  border-radius: 0;
}