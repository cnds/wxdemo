/* pages/sign-up/sign-up.wxss */
/**index.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-content: center;
  justify-content: space-between;
}

.name {
  height: 80px;
}

.name text {
  font-size: 30px;
}

.index {
  flex-grow: 1;
  height: 50%;
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-content: center;
  flex-direction: column;
  width: 85%;
  padding: 0 2%;
}

.sign-up-item {
  margin-top: 30rpx;
  border-bottom: 1px solid #eee;
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  padding-bottom: 10rpx;
}

.bottom {
  border-bottom: 0px;
}

.sign-up-item-info {
  font-size: 12px;
  color: #888;
  padding-bottom: 20rpx;
}

.sign-up-sms {
  height: 100%;
  display: flex;
  flex-direction: row;

}

.sign-up-sms button {
  height: 100%;
  font-size: 12px;
  display: flex;
  color: #888;
}

.sign-up-password {
  display: flex;
  justify-content: space-between;
  flex-grow: 1;
  align-items: center;
}



.sign-up-btn {
  width: 80%;
  color: white;
  background-color: green;
  border-radius: 0;
  font-size: 14px;
}

.sign-up-btn hover {
  width: 80%;
  color: white;
  border-radius: 0;
}