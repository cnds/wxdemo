/**index.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-content: center;
  justify-content: space-between;
}

.name {
  width: 500rpx;
  height: 80rpx;
  display: flex;
  justify-content: center;
  padding-bottom: 20px;
}

.name text {
  font-size: 30px;
}

.index {
  flex-grow: 1;
  height: 30%;
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-content: center;
  flex-direction: column;
  width: 85%;
  padding: 0 2%;
}

.login-item {
  margin-top: 30px;
  border-bottom: 1px solid #eee;
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  padding-bottom: 5px;
}

.bottom {
  border-bottom: 0px;
}

.login-item-info {
  font-size: 12px;
  color: #888;
  padding-bottom: 20rpx;
}

.login-password {
  display: flex;
  justify-content: space-between;
  flex-grow: 1;
  align-items: center;
}

.login-password text {
  height: 100%;
  font-size: 12px;
  display: flex;
  color: blue;
}

.login-btn {
  width: 80%;
  color: white;
  background-color: green;
  border-radius: 0;
  font-size: 14px;
}

.login-btn hover {
  width: 80%;
  color: white;
  border-radius: 0;
}

.index-bottom {
  font-size: 12px;
  display: flex;
  color: #888;
  justify-content: center;
}

.index-bottom text{
  color: blue;
}